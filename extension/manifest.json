{
  "manifest_version": 3,
  "name": "Quizlet Data Extractor",
  "version": "1.2",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "alarms",
    "contextMenus",
    "scripting"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "exclude_matches": ["*://*.quizlet.com/*"],
      "js": ["content_non_quizlet.js"],
      "all_frames": true,
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://*.quizlet.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "host_permissions": [
    "http://localhost:5000/*"
  ]
}